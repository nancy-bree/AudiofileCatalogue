@model PagedList.IPagedList<CI.Entities.Genre>
@using PagedList.Mvc

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Управление жанрами";
}

<div class="page-header center">
  <h1>@ViewBag.Title</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th style="width: 50%">Жанр</th>
            <th style="width: 50%">Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                <div>
                    @Html.ActionLink("Редактировать", "Edit", "Genre"
                                , new {id = item.ID}
                                ,new {@class = "btn btn-sm btn-info", role = "button"})
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model, page => Url.Action("Genres", new RouteValueDictionary {{"page", page }}), PagedListRenderOptions.Classic)