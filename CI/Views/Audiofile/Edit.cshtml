@model CI.Entities.Audiofile

@{
    ViewBag.Title = "Редактировать информацию об аудиофайле";
}

<div class="page-header center">
  <h1>@ViewBag.Title</h1>
</div>

@using (Html.BeginForm("Edit", "Audiofile", FormMethod.Post, new { role = "form", @class = "col-md-6", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.Filename)
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Title) 
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AuthorID)
        @Html.DropDownList("AuthorID", null, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreID)
        @Html.DropDownList("GenreID", null, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Year)
        @Html.TextBoxFor(m => m.Year, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control"})
    </div>
    <input type="submit" value="Сохранить изменения" class="btn btn-primary" /> 
    
}
