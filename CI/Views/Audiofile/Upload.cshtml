@model CI.ViewModels.AudiofileUploadViewModel

@{
    ViewBag.Title = "Загрузить аудиофайл";
}

<div class="page-header center">
  <h1>Загрузить аудиофайл</h1>
</div>

@using (Html.BeginForm("UploadAudiofile", "Audiofile", FormMethod.Post, new { role = "form", @class = "col-md-6", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Name) 
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AuthorID)
        @Html.DropDownList("AuthorID", null, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreID)
        @Html.DropDownList("GenreID", null, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Year)
        @Html.TextBoxFor(m => m.Year, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.File)
        <input type="file" name="File" id="File" class="form-control" accept="audio/mp3" /> 
        @Html.ValidationMessageFor(m => m.File) 
    </div>
    <input type="submit" value="Загрузить" class="btn btn-default" /> 
    
}