@model CI.ViewModels.AddAuthorViewModel

@{
    ViewBag.Title = "Добавить автора/исполнителя";
}

<div class="page-header center">
  <h1>@ViewBag.Title</h1>
</div>

@using (Html.BeginForm("Create", "Author", FormMethod.Post, new { role = "form", @class = "col-md-6", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Name) 
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Image)
        <input type="file" name="Image" id="Image" class="form-control" accept="image/jpeg" /> 
        @Html.ValidationMessageFor(m => m.Image) 
    </div>
    <input type="submit" value="Добавить" class="btn btn-primary" /> 
    
}