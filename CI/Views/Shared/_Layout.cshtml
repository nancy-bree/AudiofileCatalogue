@using System.Configuration
@using System.Web.Optimization

@{
  Layout = null;
  var action = ((string)ViewContext.RouteData.Values["Action"]).ToLower();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/styles.css")
    @Styles.Render("~/Content/bootstrap/bootstrap4.min.css")
    @Scripts.Render("~/Scripts/jquery-1.9.1.min.js")
    @*@Scripts.Render("~/Scripts/bootstrap.min.js")*@
    @Scripts.Render("~/Scripts/dropdown.js")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/Scripts/assets/html5shiv.js")"></script>
      <script src="@Url.Content("~/Scripts/assets/respond.min.js")"></script>
    <![endif]-->
    @RenderSection("scripts", required: false)
    @RenderSection("head", required: false)
</head>
<body>
    <div id="wrap">
        @{
            Html.RenderPartial("~/Views/Shared/_Navbar.cshtml");
        }
        <div class="container">
                @RenderBody()
        </div>
    </div>
    <div id="footer">
        <div class="container">
            <p class="text-muted credit">@DateTime.Now.Year, &copy; Каталог аудиофайлов</p>
        </div>
    </div>
</body>
</html>
